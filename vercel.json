{
  "version": 2,
  "builds": [
    {
      "src": "server.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.py"
    }
  ],
  "env": {
    "SECRET_KEY": "@secret_key",
    "GOOGLE_API_KEY": "@google_api_key",
    "TURSO_DATABASE_URL": "@turso_database_url",
    "TURSO_AUTH_TOKEN": "@turso_auth_token"
  },
  "functions": {
    "server.py": {
      "maxDuration": 30
    }
  }
}